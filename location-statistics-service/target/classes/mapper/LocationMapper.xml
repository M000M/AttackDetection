<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.pku.dao.LocationMapper">
    <resultMap type="cn.edu.pku.entities.ChinaIpLocation" id="chinaIpLocation">
        <result property="name" column="province" jdbcType="VARCHAR"/>
        <result property="value" column="count" jdbcType="INTEGER"/>
    </resultMap>
    <select id="getChinaIPLocationList" resultMap="chinaIpLocation">
        select * from china_ip_location;
    </select>

    <insert id="addIpRecord" parameterType="java.lang.String">
        insert into china_ip_location (`ip`, `province`, `count`, `time`)
        values(${ip}, ${province}, ${count}, ${time});
    </insert>
</mapper>