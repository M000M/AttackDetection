<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.pku.dao.DockerDao">
    <resultMap id="containerInfo" type="cn.edu.pku.entities.ContainerInfo">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <id column="container_id" property="containerId" jdbcType="VARCHAR"/>
        <id column="image" property="image" jdbcType="VARCHAR"/>
        <id column="name" property="name" jdbcType="VARCHAR"/>
        <id column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>
    <select id="getContainerList" resultMap="containerInfo">
        select `id`, `container_id`, `image`, `name`, DATE_FORMAT(`create_time`, "%y-%m-%d %H:%i:%s")as create_time from dockerinfo;
    </select>

    <insert id="createContainer" parameterType="cn.edu.pku.entities.ContainerInfo">
        insert into dockerinfo(`container_id`, `image`, `name`, `create_time`) values
        (#{containerId}, #{image}, #{name}, #{createTime});
    </insert>
</mapper>